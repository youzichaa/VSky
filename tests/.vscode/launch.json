            "cwd": "${fileDirname}/../build/bin/",
            "program": "${fileDirname}/../build/bin/share-OT",
            "args": [
                "r=1", "pS=7000", "pC=7002"
            ],
            "stopAtEntry": false,
            "environment": [],
